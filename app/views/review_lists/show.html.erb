<div class="page-center page-down">
  <div class='flip-container'>
    <div class='creation'>
      <div class='front'>
        <div class='cont panel'>
          <%= simple_format(@card.front) %>
        </div>
        <a href='' class='flip-trigger'>Answer</a>
      </div>

      <div class='back'>
        <div class='cont panel'>
          <%= simple_format(@card.back) %>
        </div>
        <% if @review_list.srs_review? %>
          <div class='srs-card-options row'>
            <div class='small-2 columns recall-1'>
              <%= link_to "Again", review_list_path(@review_list, recall: '1') %>
            </div>
            <div class='small-3 columns recall-2'>
              <%= link_to "Hard", review_list_path(@review_list, recall: '2') %>
            </div>
            <div class='small-2 columns recall-3'>
              <%= link_to "Fair", review_list_path(@review_list, recall: '3') %>
            </div>
            <div class='small-3 columns recall-4'>
              <%= link_to "Good", review_list_path(@review_list, recall: '4') %>
            </div>
            <div class='small-2 columns recall-5'>
              <%= link_to "Easy", review_list_path(@review_list, recall: '5') %>
            </div>
          </div>
        <% else %>
          <div class='row'>
            <div class="small-6 columns">
              <%= link_to "Done", review_list_path(@review_list, repeat: 'false') %>
            </div>
            <div class="small-6 columns card-again">
              <%= link_to "Again", review_list_path(@review_list, repeat: 'true') %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

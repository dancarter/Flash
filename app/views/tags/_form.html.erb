<%= form_for(tag) do |f| %>
  <% if tag.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tag.errors.count, "error") %> prohibited this tag from being saved:</h2>

      <ul>
      <% tag.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field panel">
    <%= f.label :name %><br>
    <%= f.text_area :name %>
    <%= f.label :share %>
    <%= f.check_box :share %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<% if !tag.name.nil? %>
  <%= button_to "Delete", tag, :method => :delete %>
  <p><%= "#{tag.taggings_count} cards under this tag." %></p>
<% end %>

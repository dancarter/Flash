<p><div class="row">
  <div class="small-2 columns side">

    <ul class="side-nav">
      <li>
        <%= link_to "New Card", '/cards' %>
      </li>

      <div class='scroll'>
        <% @cards.each do |card| %>
          <li><%= link_to card.front, cards_card_path(card.id) %></li>
        <% end %>
      </div>
    </ul>

  </div>

  <div class="small-10 columns main">

    <div class='main'>
      <% card = @card.nil? ? Card.new : @card %>
      <%= render 'cards/form', card: card %>
    </div>

  </div>
</div></p>

<%= content_for :extra_footer do %>
  <script type='text/javascript'>
      $('body').on('click', '.card-filter', function(event) {
        event.preventDefault();
      });
  </script>
<% end %>
